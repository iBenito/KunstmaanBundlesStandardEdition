{% trans_default_domain "labels" %}

{% if logged_in %}
<div id="login_widget" class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand active" href="{{ path('ZizooBaseBundle_homepage') }}">Zizoo</a>
            <div class="nav-collapse collapse">
                <ul class="nav pull-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome {{ user.username | default("none") }}<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('ZizooUserBundle_logout') }}">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>
{% else %}
<div id="login_widget" class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand active" href="{{ path('ZizooBaseBundle_homepage') }}">Zizoo</a>
            <div class="nav-collapse collapse">
                <ul class="nav pull-right">
                    {% if show_login_form %}
                        <li>
                            <form class="navbar-form pull-right" action="{{ path('ZizooUserBundle_login_check') }}" method="post">
                                <input class="span2" type="text" name="_username" placeholder="Email or username">
                                <input class="span2" type="password" name="_password" placeholder="Password">
                                <button type="submit" class="btn">Login</button>
                            </form>
                        </li>
                    {% else %}
                        <li><a id="login_link" href="{{ path('ZizooUserBundle_login') }}">Login</a></li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>
{% endif %}
