<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="jq_grid_custom.base.class">Zizoo\JqGridCustomBundle\Grid\Grid</parameter>
		<parameter key="jq_grid_custom.twig_extension.class">Zizoo\JqGridCustomBundle\Twig\JqGridExtension
		</parameter>
	</parameters>

	<services>
		<service id="jq_grid_custom" class="%jq_grid_custom.base.class%" scope="prototype">
			<argument type="service" id="service_container" />
			<call method="setDatePickerFormat">
				<argument>%jq_grid_custom.datepicker_format%</argument>
			</call>
			<call method="setDatePickerPhpFormat">
				<argument>%jq_grid_custom.datepickerphp_format%</argument>
			</call>

		</service>
		<service id="jq_grid_custom.twig_extension" class="%jq_grid_custom.twig_extension.class%"
			public="false">
			<tag name="twig.extension" />
			<argument type="service" id="router" />
		</service>

	</services>

</container>
