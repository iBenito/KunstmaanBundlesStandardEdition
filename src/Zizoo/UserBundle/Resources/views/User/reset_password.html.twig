{# src/Zizoo/UserBundle/Resources/views/User/reset_password.html.twig #}
{% extends 'ZizooUserBundle::layout.html.twig' %}

{% block body %}
<style type="text/css">
    .reset {
        width: 470px;
        margin: 20px auto;
        background-color: white;
        background: none repeat scroll 0 0 #FFFFFF;
        border-radius: 0 0 5px 5px;
        box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
</style>
  <div>
     <div class="reset">
        <form class="form" action="{{ path('ZizooUserBundle_register')}}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <button class="button blue big" type="submit">Reset Password</button>
        </form>
     </div>
  </div>
{% endblock %}