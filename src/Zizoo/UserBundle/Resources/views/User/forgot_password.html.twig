{# src/Zizoo/UserBundle/Resources/views/User/forgot_password.html.twig #}
{% extends 'ZizooUserBundle::layout.html.twig' %}

{% block body %}
<style type="text/css">
    #{% if ajax %}forgot_password_inner_ajax{% else %}forgot_password_inner{% endif %} {
        width: 470px;
        margin: 20px auto;
        background-color: white;
        background: none repeat scroll 0 0 #FFFFFF;
        border-radius: 0 0 5px 5px;
        box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    
    
</style>
<div>
    <div class="forgot_password form" id="{% if ajax %}forgot_password_inner_ajax{% else %}forgot_password_inner{% endif %}">
        <form method="post" {{ form_enctype(form) }} class="forgot_password_form">
            {{ form_widget(form) }}
            <button class="button blue big" type="submit">Reset Password</button>
        </form>
    </div>
</div>
{% endblock %}