{% extends 'ZizooUserBundle::layout.html.twig' %}

{% block body %}
<style type="text/css">
    #{% if ajax %}register_inner_ajax{% else %}register_inner{% endif %} {
        width: 470px;
        margin: 20px auto;
        background-color: white;
        background: none repeat scroll 0 0 #FFFFFF;
        border-radius: 0 0 5px 5px;
        box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
</style>
    <div>
        <div class="register" id="{% if ajax %}register_inner_ajax{% else %}register_inner{% endif %}">
            <p>Your registration has been submitted. You'll receive a confirmation with an activation link shortly. Please click on this link to complete registration.</p>
            <input type="hidden" value="submitted" id="status" />
        </div>
    </div>
{% endblock %}


