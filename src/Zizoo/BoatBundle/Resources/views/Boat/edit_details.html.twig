{% set step = app.session.get('step') %}

{% include 'ZizooBoatBundle:Boat:boat_navigation.html.twig' with { 'boat': boat, 'current_route': routes['details_route'], 'routes': routes }  %}

<div class="content">
    {% if step != "" %}
        <h3>Step {{ step }}</h3>
    {% endif %}

    <form class="form" action="{{ path(routes['details_route'], { 'id': boat.id }) }}" method="post" {{ form_enctype(form) }}>

        {{ form_widget(form) }}

        <br />
        {% if step != "" %}
            <button type="submit" class="button blue large">Continue</button>
        {% else %}
            <button type="submit" class="button blue large">Save</button>
        {% endif %}
        <input id="override_url" name="override_url" type="hidden" value="" />
    </form>
        
    <style type="text/css">
        #zizoo_boat_details ul li {
            width: 33%;
            float: left;
            line-height: 20px;
        }
    </style>
        
    <script type="text/javascript">

        

        $(document).ready(function(){
            
        });
    </script>
</div>