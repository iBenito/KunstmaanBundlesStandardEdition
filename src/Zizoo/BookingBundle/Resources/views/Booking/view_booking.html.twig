{% extends 'ZizooBookingBundle::layout.html.twig' %}
{% trans_default_domain "labels" %}

{% block title %}Your booking{% endblock %}

{% block body %}

    <table>
        <tbody id="trip_details">
            <tr>
                <td>Boat:</td>
                <td><a href="{{ path('ZizooBoatBundle_show', {id: booking.reservation.boat.id}) }}">{{ booking.reservation.boat.name }}</a></td>
            </tr>
            <tr>
                <td>Check In:</td>
                <td>{{ booking.reservation.checkIn|date }}</td>
            </tr>
            <tr>
                <td>Check Out:</td>
                <td>{{ booking.reservation.checkOut|date }}</td>
            </tr>
            <tr>
                <td>Nights:</td>
                <td>{{ booking.reservation|Reservation_numberOfDays }}</td>
            </tr>
            <tr>
                <td>Guests:</td>
                <td>{{ booking.reservation.nrGuests }}</td>
            </tr>
        </tbody>
        <tbody id="cost_details">
            <tr>
                <td>Total:</td>
                <td>{{ booking|Booking_displayPrice }}</td>
            </tr>
            <tr>
                <td>Paid:</td>
                <td>{{ booking|Booking_amountPaid }}</td>
            </tr>
            <tr>
                <td>Outstanding:</td>
                <td>{{ booking|Booking_amountOutstanding }}</td>
            </tr>
        </tbody>
    </table>

    <br />

    
    <script type="text/javascript">
               
        $(document).ready(function(){            
            
            

        });
    </script>

{% endblock %}