
{% block body %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage}}
        </div>
    {% endfor %}
    
    <script type="text/javascript">
        var uploadedFiles = new Array();
        
        function removeUploadedFiles(){
            for (var i=0; i<uploadedFiles.length; i++){
                zizoo_charter_logo_dropzone_api.removeFile(uploadedFiles[i]);
            }
            uploadedFiles = new Array();
        }
        
        function getLogo(){
            $.ajax({
                url:        '{{ path('ZizooCharterBundle_Charter_GetLogo') }}',
                type:       'get',
                success:    function(data, textStatus, XHR){
                    var newImageDivContainer    = $(data).find('#zizoo_charter_logo_media_div_container');
                    var newCharterLogo          = $(data).find('#zizoo_charter_logo');
                    
                    $('#zizoo_charter_logo_media_div_container').html($(newImageDivContainer).html());
                    $('#zizoo_charter_logo_container #zizoo_charter_logo').html($(newCharterLogo).html());
                    removeUploadedFiles();
                    
                    var src = $(newImageDivContainer).find('.controls .full_url').val();
                    $('#charter_logo #logo_img').attr('src', src).css('display', 'block');
                }
            });
        }
        
        function logoUploadError(file, response){
            var queuedFiles     = zizoo_charter_logo_dropzone_api.getQueuedFiles();
            var uploadingFiles  = zizoo_charter_logo_dropzone_api.getUploadingFiles();
            if (queuedFiles.length>0 || uploadingFiles.length>0 || uploadedFiles.length==0) return;
           
            getLogo();
        }
        
        function logoUploadSuccess(file, response){
            if (file!=null) uploadedFiles.push(file);
            var queuedFiles     = zizoo_charter_logo_dropzone_api.getQueuedFiles();
            var uploadingFiles  = zizoo_charter_logo_dropzone_api.getUploadingFiles();
            if (queuedFiles.length>0 || uploadingFiles.length>0) return;
           
            getLogo();
        }
        
        function logoCrop(id, x1, y1, x2, y2, w, h){
            $.ajax({
                url:            '{{ path('ZizooMediaBundle_Media_CropMedia') }}',
                type:           'post',
                data: {
                    id:             id,
                    entity_type:    'ZizooCharterBundle:CharterLogo',
                    x1:             x1,
                    y1:             y1,
                    x2:             x2,
                    y2:             y2,
                    w:              w,
                    h:              h
                },
                success: function(data){
                    logoUploadSuccess(null,{id: id});
                }
            });
        }
        
        function openDeleteDialog(){
            $('#delete_logo').dialog({
                title: 'Delete logo?',
                width: 470,
                maxWidth: 470,
                fluid: true,
                modal: true,
                closeOnEscape: false,
                resizable: false
            });
        }

        function closeDeleteDialog(){
            $('#delete_logo').dialog('close');            
            $('#delete_logo').unblock();
        }
        
        function logoDelete(container){
            var id  = $(container).find('.media_id').val();

            $('#delete_logo .submit_btn').unbind('click').click(function(){
                $('#delete_logo').block({ message: '' });
                $.ajax({
                    url:            '{{ path('ZizooMediaBundle_Media_DeleteMedia') }}',
                    type:           'post',
                    data: {
                        id:             id,
                        entity_type:    'ZizooCharterBundle:CharterLogo'
                    },
                    success: function(data){
                        $(container).find('.media_div').html('');
                        closeDeleteDialog();
                    },
                    error: function(jqXHR, statusText, errorThrown){
                        //console.log(jqXHR);
                    }
                });
            });
            
            $('#delete_logo .cancel_btn').unbind('click').click(function(){
                closeDeleteDialog();
            });
            
            openDeleteDialog();
            
        }
        
        
    </script>

    <form class="form" method="post" {{ form_enctype(form) }}>
    
        {{ form_widget(form) }}

        <br />
        <button type="submit" class="button blue small right">Save</button>
    </form>
    
    <div id="context_hidden" style="display: none">
        <div id="delete_logo">
            <p>
                Are you sure you want to delete the logo?
            </p>
            
            <br />
            <input type="button" value="Delete" class="submit_btn button red small right" />
            <input type="button" value="Cancel" class="cancel_btn button grey small right" />
        </div>
    </div>

{% endblock %}