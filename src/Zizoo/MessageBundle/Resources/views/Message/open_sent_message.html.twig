{# src/Zizoo/MessageBundle/Resources/views/Message/open_sent_message.html.twig #}
{% extends 'ZizooUserBundle::layout.html.twig' %}
{% block body %}

    {% block ajax %}
        {% include 'ZizooMessageBundle:Message:open_sent_message_ajax.html.twig' %}
    {% endblock %}

    <script type="text/javascript">
        $(document).ready(function(){
            $('#send_message_form .cancel_btn').unbind('click').click(function(){
                window.location.href = '{{ path('sent') }}';
            });
            
            $('input[type="button"], input[type="submit"], button').button();
        });
    </script>
    
    <style type="text/css">
        #thread {
        }
        
        #thread .message {
            margin-bottom: 20px;
            clear: both;
        }
        
        #thread .message .details {
            float: left;
            margin-right: 50px;
        }
        
        #thread .message .content {
            float: left;
            border-radius: 15px;
            background-color: lightgrey;
            padding: 20px;
        }
        
        #thread .message.current .content {
            background-color: lightblue;
        }
    </style>
{% endblock %}