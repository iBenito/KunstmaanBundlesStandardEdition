    <div>
        <div class="delete_message" id="{% if ajax %}delete_sent_message_inner_ajax{% else %}delete_sent_message_inner{% endif %}">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice">
                    {{ flashMessage}}
                </div>
            {% endfor %}

            <form id="delete_sent_message_form" novalidate="novalidate" action="{{ path('delete_sent_message', {messageId: form.get('message_id')})}}" method="post" {{ form_enctype(form) }}>
                <p>{% trans %}zizoo_message.label.confirm_sent_message_delete{% endtrans %}</p>
                {{ form_widget(form) }}
                <input type="submit" value="OK" />
                <input type="button" value="Cancel" class="cancel_btn" />
            </form>
        </div>
    </div>