{% extends 'ZizooUserBundle::layout.html.twig' %}
{% block body %}

    {% block ajax %}
        {% include 'ZizooMessageBundle:Message:view_thread_ajax.html.twig' %}
    {% endblock %}

    <script type="text/javascript">
        $(document).ready(function(){
            $('#send_message_form .cancel_btn').unbind('click').click(function(){
                window.location.href = '{{ path(redirect) }}';
            });
            
            $('input[type="button"], input[type="submit"], button').button();
        });
    </script>
    
    
{% endblock %}