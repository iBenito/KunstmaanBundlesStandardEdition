{# src/Zizoo/AddressBundle/Resources/views/Address/locations_boat_info_window.html.twig #}
{% trans_default_domain "labels" %}
'<div class="marker">'+
'   <h2 class="marker_heading"><a href="{{ path('ZizooBoatBundle_boat_show', { 'id': boat.id }) }}">{{ boat.name }}: {{ boat.title }}</a></h2>'+
'   <div id="marker_content">'+
'       <div class="marker_images">'+
        {% for image in boat.image %}
'           <article class="image" id="image-{{ image.id }}">'+
'               <img src="{{ asset(image|imageWebPath)| imagine_filter('thumb_75x75') }}" alt="" class="small" />'+
'           </article>'+
        {% else %}
        {% endfor %}
'   </div>'+
'   {{ boat.description }}'+
'</div>'