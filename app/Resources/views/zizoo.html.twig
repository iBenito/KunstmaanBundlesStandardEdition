<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html" charset=utf-8" />
        <title>{% block title %}Bootstrap{% endblock %} - zizoo</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        
        <!-- Le styles -->
        {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
        
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
        <style type="text/css">
          body {
            padding-top: 60px;
            padding-bottom: 40px;
          }
        </style>
        <link href="{{ asset('css/bootstrap-responsive.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery-ui-1.9.2.custom.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery.asmselect.css') }}" rel="stylesheet">
        {% endblock %}
        
        <!-- Le javascript -->
        {% block javascripts %}
        <script src="{{ asset('js/jquery-1.8.3.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery-ui-1.9.2.custom.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery.blockUI.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/js.check.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery.asmselect.js') }}" type="text/javascript"></script>
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    
    <body>

        <!-- Main Top Navigation -->
        {% block navigation %}{% endblock %}   

        <!-- Fluid Container -->
        <div class="container">

            <div class="row-fluid">
                {% block body %}{% endblock %}
            </div>  

            {% block row %}{% endblock %}

            <hr>

            <div id="footer">
                {% block footer %}
                    <ul class="nav">
                        <li><a href="{{ path('ZizooBaseBundle_about') }}">About</a></li>
                        <li><a href="{{ path('ZizooBaseBundle_terms') }}">Terms &amp; Conditions</a></li>
                        <li><a href="{{ path('ZizooBaseBundle_policies') }}">Policies</a></li>
                        <li><a href="{{ path('ZizooBaseBundle_feedback') }}">Feedback</a></li>
                        <li><a href="{{ path('ZizooBaseBundle_faq') }}">FAQ</a></li>
                      </ul>
                    <p>&copy; Zizoo 2012</p>
                {% endblock %}
            </div>

        </div> <!-- /container -->
    
    </body>
</html>